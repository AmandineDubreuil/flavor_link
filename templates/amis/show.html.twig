{% extends 'base.html.twig' %}

{% block title %}Amis
{% endblock %}

{% block body %}
	<h1>{{ ami.nom }}</h1>

	<div>
		Nombre de personnes :
		{{ ami.nbPersonnes }}
	</div>
	<div>
		<div>
			<a href="{{ path('app_amis_index') }}">Retour</a>
		</div>
		<div>
			<a href="{{ path('app_amis_edit', {'id': ami.id}) }}">Modifier</a>
		</div>
		{{ include('amis/_delete_form.html.twig') }}
	</div>

	<div>

		<div>
			<h3>Repas</h3>
			{% for repa in repas %}
				<div>
					{{ repa.dateRepas ? repa.dateRepas|date('d-M-Y') : '' }}
					-
					{{ repa.recette.titre}}
				</div>
			{% else %}
				<div>
					Aucun repas enregistr√© !
				</div>
			{% endfor %}
		</div>


	{% endblock %}
