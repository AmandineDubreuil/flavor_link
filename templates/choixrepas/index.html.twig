{% extends 'base.html.twig' %}

{% block title %}Hello ChoixrepasController!
{% endblock %}

{% block body %}


	<section class="choixRepas">

		<h2>Amis invités</h2>

		{% if amisPresents %}
			<div>
				{% for ami in amisPresents %}
					{{ ami.nom }}
				{% endfor %}

			</div>
		{% else %}


			<form method="POST">

				{% for ami in amis %}
					<div><input type="checkbox" id="{{ ami.nom }}" name="amisPourRecettes[]" value="{{ ami.id }}">
						<label for="{{ ami.nom }}">{{ ami.nom }}</label>
					</div>
				{% endfor %}
				<input type="submit" value="Chercher" name="submit">
			</form>
		{% endif %}

		<div>
			<h3>Repas proposés</h3>
			{% for recette in recettesOk %}
				<div>
					<a href="{{ path('app_recettes_show', {'id': recette.id}) }}">{{ recette.titre }}</a>
					-
					<a href="{{ path('app_repas_new', {'recetteId': recette.id, 'amisId': amisId}) }}">Choisir</a>
				</div>
			{% endfor %}

		</div>
	</section>
{% endblock %}
