{% extends 'base.html.twig' %}

{% block title %}Flavor Link
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Accueil</h1>
		<div class="container">
			<a class="btn shadow-1 rounded-1" href="{{path('app_user_index')}}">Mon compte</a>
			<a class="btn shadow-1 rounded-1" href="{{path('app_recettes_index')}}">Mes recettes</a>
		
		{% if not is_granted('ROLE_USER') %}
			<a class="btn shadow-1 rounded-1" href="{{path('app_login')}}">Connexion</a>
			<a class="btn shadow-1 rounded-1" href="{{path('app_register')}}">Inscription</a>
		{% endif %}
</div>
	</div>
{% endblock %}
