{% extends 'base.html.twig' %}

{% block title %}Inscription - Flavor Link
{% endblock %}

{% block body %}
	<section class="inscription">
		<h1>Inscription</h1>
		<div>
			<a class="btn btnRetour" href="javascript:history.go(-1)">Retour</a>
		</div>


		{{ form_start(registrationForm) }}
		<div class="inscriptionFormInput">
			{{ form_row(registrationForm.pseudo, {
            label: 'Pseudo : '
        }) }}
		</div>
		<div class="personnes">
			{{ form_row(registrationForm.nbPersonnes, {
            label: 'Composition du foyer : '
        }) }}<div>
				personne(s)</div>
		</div>
		<div class="inscriptionFormInput">
			{{ form_row(registrationForm.email, {
            label: 'E-mail : '
        }) }}
		</div>
		<div class="password">
			<div class="inscriptionFormInput">
				{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe : '
        }) }}
			</div>
			<div class="inscriptionFormInput">
				{{ form_row(registrationForm.confirmPassword, {
            label: 'Confirmation du Mot de passe : '
        }) }}
			</div>
			<div class="accepteCGU">
				{% set termsOfUseFormGroup %}
				{{ form_row(registrationForm.agreeTerms) }}
				{% endset %}
				{{ termsOfUseFormGroup|replace({'#DOCUMENTATION#':'<a class="has-text-underline" href="'~absolute_url(path('app_cgu'))~'" target="blank">C.G.U.</a>'})|raw }}
			</div>
			{% if passError is defined %}
				<div class="alert alert-danger" role="alert">{{ passError }}</div>
			{% endif %}
			<button type="submit" class="btn btnValider">Inscription</button>
			{{ form_end(registrationForm) }}
		</section>
	{% endblock %}
