{% extends 'base.html.twig' %}

{% block title %}Profil de :
			{{app.user.pseudo}}
{% endblock %}

{% block body %}
	<div class="grix xs4 container">
		<h1 class="col-xs4">Profil de :
			{{app.user.pseudo}}</h1>
		<div class="col-xs3">Pseudo :</div>
		<div>{{app.user.pseudo}}</div>
		<div class="col-xs3">Nombre de personnes dans le foyer :</div>
		<div>{{app.user.nbPersonnes}}
			personne(s)</div>
		<div class="col-xs3">E-mail :</div>
		<div>{{app.user.email}}</div>
		<div class="col-xs4">
			<a href="{{ path('app_user_edit', {'id': app.user.id})}}" class="btn shadow-1 rounded-1 blue">Modifier le profil</a>
			<a href="#" class="btn shadow-1 rounded-1 blue">Modifier le mot de passe</a>
		</div>
	</div>
	<div class="grix xs4 container">
		<h2 class="col-xs4">Recettes de :
			{{app.user.pseudo}} ({{app.user.recettes|length}})</h2>

{% for recette in app.user.recettes %}
    <div class="col-xs3">Titre :</div>
		<div>{{recette.titre}}</div>
{% endfor %}
		
	</div>

{% endblock %}
